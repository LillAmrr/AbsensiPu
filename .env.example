# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Smart Attendance
NEXT_PUBLIC_APP_VERSION=1.0.0

# Face Recognition (Optional)
NEXT_PUBLIC_FACE_API_URL=your-face-api-url
NEXT_PUBLIC_FACE_API_KEY=your-face-api-key

# Google Maps (Optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Email Service (Optional)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email
EMAIL_SERVER_PASSWORD=your-password
EMAIL_FROM=noreply@smartattendance.com

# Feature Flags
NEXT_PUBLIC_ENABLE_FACE_RECOGNITION=true
NEXT_PUBLIC_ENABLE_GPS_TRACKING=true
NEXT_PUBLIC_ENABLE_REALTIME=true

# Development
NODE_ENV=development